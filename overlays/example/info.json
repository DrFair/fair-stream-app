{
  "name": "Example overlay",
  "description": "An example overlay",
  "version": "0.1.0",
  "author": "Mads Skovgaard",
  "settings": {
    "textSize": {
      "name": "Text size",
      "note": "Size in pixels",
      "type": "number",
      "defaultValue": 30
    },
    "textPosition": {
      "name": "Text position",
      "note": "Number of pixels from the top",
      "type": "number",
      "defaultValue": 100
    },
    "textAlign": {
      "name": "Text alignment",
      "type": "select",
      "options": [
        "Center",
        "Left",
        "Right"
      ],
      "defaultValue": "Center"
    }
  }
}